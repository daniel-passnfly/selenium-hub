{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "environment": [
                {
                    "name": "HUB_HOST", 
                    "value": "hub"
                }
            ],
            "memory": 512,
            "essential": true, 
            "image": "selenium/node-chrome:3.12.0-cobalt",
            "mountPoints": [
                {
                    "containerPath": "/dev/shm", 
                    "sourceVolume": "DevShm"
                }
            ], 
            "name": "chrome"
        }, 
        {
            "environment": [
                {
                    "name": "HUB_HOST", 
                    "value": "hub"
                }
            ],
            "memory": 512,
            "essential": true, 
            "image": "selenium/node-firefox:3.12.0-cobalt",
            "mountPoints": [
                {
                    "containerPath": "/dev/shm", 
                    "sourceVolume": "DevShm"
                }
            ], 
            "name": "firefox"
        }, 
        {
            "memory": 512,
            "essential": true, 
            "image": "selenium/hub:3.12.0-cobalt",
            "name": "hub", 
            "portMappings": [
                {
                    "containerPort": 4444, 
                    "hostPort": 4444
                }
            ]
        }
    ],
    "volumes": [
        {
            "host": {
                "sourcePath": "/dev/shm"
            }, 
            "name": "DevShm"
        }
    ]
}
