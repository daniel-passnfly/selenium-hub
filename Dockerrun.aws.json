{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "memory",
      "host": {
        "sourcePath": "/dev/shm"
      }
    },
    {
      "name": "storage-efs",
      "host": {
        "sourcePath": "/var/tmp"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "hub",
      "memoryReservation": 128,
      "essential": true,
      "image": "selenium/standalone-chrome:latest",
      "portMappings": [
        {
          "containerPort": 4444,
          "hostPort": 4444
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "memory",
          "containerPath": "/dev/shm"
        },
        {
          "sourceVolume": "storage-efs",
          "containerPath": "/var/tmp"
        }
      ]
    }
  ]
}
