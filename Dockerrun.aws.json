{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "memory",
      "host": {
        "sourcePath": "/dev/shm"
      }
    },
    {
      "name": "downloads",
      "host": {
        "sourcePath": "/bot/downloads"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "hub",
      "memory": 3500,
      "essential": true,
      "image": "selenium/standalone-chrome:latest",
      "portMappings": [
        {
          "containerPort": 4444,
          "hostPort": 4444
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "memory",
          "containerPath": "/dev/shm"
        },
        {
          "sourceVolume": "downloads",
          "containerPath": "/bot/downloads"
        }
      ]
    }
  ]
}
